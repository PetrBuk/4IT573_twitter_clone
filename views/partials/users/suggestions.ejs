<div class="max-w-sm rounded-lg bg-gray-800 overflow-hidden shadow-lg m-4 mr-20">
	<div class="flex">
		<div class="flex-1 m-2">
			<h2 class="px-4 py-2 text-xl w-full font-semibold text-white">Suggested profiles</h2>
		</div>
	</div>


	<hr class="border-gray-600">

	<% for (const suggestion of users) { %>

		<div class="flex flex-shrink-0">
			<div class="flex-1 ">
				<div class="flex items-center w-48">
					<div>
						<img class="inline-block h-10 w-auto rounded-full ml-4 mt-2"
							src="<%= suggestion.image || 'https://pbs.twimg.com/profile_images/1121328878142853120/e-rpjoJi_bigger.png' %>"
							alt="" />
					</div>
					<div class="ml-3 mt-3">
						<p class="text-base leading-6 font-medium text-white">
							<%= suggestion.name %>
						</p>
						<p
							class="text-sm leading-5 font-medium text-gray-400 group-hover:text-gray-300 transition ease-in-out duration-150">
							@<%= suggestion.name %>
						</p>
					</div>
				</div>

			</div>
			<div class="flex-1 px-4 py-2 m-2">
				<%- include('./follow_button', { user: suggestion }) %>
			</div>
		</div>
		<hr class="border-gray-600">

		<% } %>

			<!--show more-->

			<div class="flex">
				<div class="flex-1 p-4">
					<h2 class="px-4 ml-2 w-48 font-bold text-blue-400">Show more</h2>
				</div>
			</div>

</div>