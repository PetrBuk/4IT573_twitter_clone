<div class="w-full">
	<div class="flex flex-shrink-0 p-4 pb-0">
		<a href="/tweet/<%= tweet.id %>" class="flex-shrink-0 group block">
			<div class="flex items-center">
				<div>
					<img class="inline-block h-10 w-10 rounded-full" src="<%= tweet.user.image %>" alt="" />
				</div>
				<div class="ml-3">
					<p class="text-base leading-6 font-medium text-white">
						<%= tweet.user.name %>
							<span
								class="text-sm leading-5 font-medium text-gray-400 group-hover:text-gray-300 transition ease-in-out duration-150">
								<%= tweet.updatedAt.toLocaleDateString() %>: <%= tweet.updatedAt.toLocaleTimeString() %>
							</span>
					</p>
				</div>
			</div>
		</a>
	</div>
	<div class="pl-16">
		<p class="text-base width-auto font-medium text-white flex-shrink">
			<%= tweet.text %>
		</p>


		<div class="flex">
			<div class="w-full">

				<div class="flex items-center">
					<div class="flex-1 text-center">
						<a href="/tweet/<%= tweet.id %>"
							class="w-auto mt-1 group flex gap-1 items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full hover:bg-gray-600 hover:text-blue-300">

							<svg class="text-center h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round"
								stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
								<path
									d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z">
								</path>
							</svg>

							<span class="min-w-4">
								<%= tweet.repliesCount %>
							</span>

						</a>
					</div>

					<div class="flex-1 text-center py-2 m-2">
						<%- include('./retweet_button', { tweet }) %>
					</div>

					<div class="flex-1 text-center py-2 m-2">
						<%- include('./like_button', { tweet }) %>
					</div>

					<div class="flex-1 text-center py-2 m-2">
						<button type="button" disabled
							class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full hover:bg-gray-600 hover:text-blue-300 cursor-not-allowed">
							<svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round"
								stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
								<path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
							</svg>
						</button>
					</div>
					<div class="flex-1 text-center py-2 m-2">
						<%- include('./bookmark_button', { tweet }) %>
					</div>

					<div class="flex-1 text-center py-2 m-2">
						<button disabled type="button"
							class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full hover:bg-gray-600 hover:text-blue-300 cursor-not-allowed">
							<svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round"
								stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
								<path
									d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z">
								</path>
							</svg>
						</button>
					</div>
				</div>
			</div>

		</div>

	</div>
	<hr class="border-gray-600">
</div>