<button type="button" hx-post="/api/tweet/like/<%= tweet.id %>" hx-swap="outerHTML"
	class="w-auto mt-1 group flex gap-1 items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full hover:bg-gray-600 hover:text-blue-300">

	<svg class="text-center h-7 w-6" fill="<%= tweet.isLiked ? 'red' : 'none' %>" stroke-linecap="round"
		stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
		<path
			d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z">
		</path>
	</svg>

	<span class="min-w-4">
		<%= tweet.likesCount %>
	</span>

</button>